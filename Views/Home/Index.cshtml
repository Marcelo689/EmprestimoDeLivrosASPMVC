@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["title"];
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">@TempData["MensagemSucesso"]</div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">@TempData["MensagemErro"]</div>
}
<div class="text-center">
    <h1 class="display-4">@localizer["title"]</h1>
    <p>@localizer["sentece"]</p>
    <div>
        <i class="bi bi-book"></i>
    </div>
</div>
